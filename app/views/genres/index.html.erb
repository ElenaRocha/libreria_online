<p style="color: green"><%= notice %></p>

<h1>Genres</h1>

<div id="genres">
  <% @genres.each do |genre| %>
    <%= render genre %>
    <p>
      <%= link_to "Show this genre", genre %>
    </p>
  <% end %>
</div>

<% if Current.user.present? && Current.user.role == "admin" %>
  <%= link_to "New genre", new_genre_path %>
<% end %>
