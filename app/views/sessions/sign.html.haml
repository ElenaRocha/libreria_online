%h1 Sign in
= form_with(model: @user) do |form|
  %div.form-group.field.w-25
    = form.label :email, "Email", style: "display: block", required: true
    = form.text_field :email, class: "form-control"
  %div.form-group.field.w-25
    = form.label :password, "Contrase√±a", style: "display: block", required: true
    %div.input-goup
      = form.password_field :password, class: "form-control password"
      %i.bi.bi-eye-fill.input-group-append.toggle-password
  %div
    = form.submit :Entrar, class: 'btn btn-primary'
    = link_to "Registrarse", new_user_path, class: "btn btn-link my-2 my-lg-0"

:javascript
  $(".toggle-password").on('click',function() 
  {if ($(".password").attr('type') === 'password') {$(".password").attr('type', 'text');
  } else {
  $(".password").attr('type', 'password');
  }
  });
