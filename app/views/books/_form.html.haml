= form_with(model: book) do |form|
  - if book.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - book.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :title, style: "display: block"
    = form.text_field :title
  %div
    = form.label :author_id, style: "display: block"
    = form.text_field :author_id
  %div
    = form.label :genre_id, style: "display: block"
    = form.text_field :genre_id
  %div
    = form.label :publication_date, style: "display: block"
    = form.date_field :publication_date
  %div
    = form.label :n_pages, style: "display: block"
    = form.number_field :n_pages
  %div
    = form.label :synopsis, style: "display: block"
    = form.text_area :synopsis
  %div
    = form.label :price, style: "display: block"
    = form.text_field :price
  %div
    = form.submit
