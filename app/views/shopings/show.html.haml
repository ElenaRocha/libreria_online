%h1 Orders
= link_to "Seguir comprando", books_path
#orders.container
  .row
    - @order.each do |order|
      .col
        = render order
        %div
          = link_to "Edit this order", edit_order_path(@order)
          |
          = link_to "Ver pedidos", shoping_path
        - if order.state == "pending"
          = button_to "Finalizar pedido", {:controller => "shopings", :action => "finish", :id => order.id }