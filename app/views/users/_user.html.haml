%div{:id => "#{dom_id user}"}
  %p
    %strong Name:
    = user.name
  %p
    %strong First surname:
    = user.first_surname
  %p
    %strong Second surname:
    = user.second_surname
  %p
    %strong Email:
    = user.email
  %p
    %strong Password:
    = user.password
  %p
    %strong Telephone:
    = user.telephone
  %p
    %strong Address:
    = user.address
  - if Current.user.present? && Current.user.role == "admin"
    %p
      %strong Role:
      = user.role
