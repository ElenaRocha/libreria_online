= form_with(model: user) do |form|
  - if user.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.each do |error|
          %li= error.full_message
  %div.form-group.field.w-25
    = form.label :nombre, style: "display: block", required: true
    = form.text_field :name, class: "form-control"
  %div.form-group.field.w-25
    = form.label :primer_apellido, style: "display: block", required: true
    = form.text_field :first_surname, class: "form-control"
  %div.form-group.field.w-25
    = form.label :segundo_apellido, style: "display: block"
    = form.text_field :second_surname, class: "form-control"
  %div.form-group.field.w-25
    = form.label :email, style: "display: block", required: true
    = form.text_field :email, class: "form-control"
  %div.form-group.field.w-25
    = form.label :contraseña, style: "display: block", required: true
    = form.password_field :password, class: "form-control"
  %div.form-group.field.w-25
    = form.label :confirmar_contraseña, style: "display: block", required: true
    = form.password_field :password, class: "form-control"
  %div.form-group.field.w-25
    = form.label :teléfono, style: "display: block", required: true
    = form.number_field :telephone, class: "form-control"
  %div.form-group.field.w-25
    = form.label :dirección, style: "display: block", required: true
    = form.text_field :address, class: "form-control"
  - if Current.user.present? && Current.user.role == "admin"
    %div.form-group.field.w-25
      = form.label :role, style: "display: block", required: true
      = form.text_field :role, class: "form-control"
  %div
    = form.submit :Registrar, class: 'btn btn-primary'
