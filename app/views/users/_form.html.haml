= form_with(model: user) do |form|
  - if user.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.each do |error|
          %li= error.full_message
  %div.form-group.field.w-25
    = form.label :name, "Nombre", style: "display: block", required: true
    = form.text_field :name, class: "form-control"
  %div.form-group.field.w-25
    = form.label :first_surname, "Primer apellido", style: "display: block", required: true
    = form.text_field :first_surname, class: "form-control"
  %div.form-group.field.w-25
    = form.label :second_surname, "Segundo apellido", style: "display: block"
    = form.text_field :second_surname, class: "form-control"
  %div.form-group.field.w-25
    = form.label :email, "Email", style: "display: block", required: true
    = form.text_field :email, class: "form-control"
  %div.form-group.field.w-25
    = form.label :password, "Contraseña", style: "display: block", required: true
    = form.password_field :password, class: "form-control"
  %div.form-group.field.w-25
    = form.label :password_confirmation, "Confirmar contraseña", style: "display: block", required: true
    = form.password_field :password_confirmation, class: "form-control"
  %div.form-group.field.w-25
    = form.label :telephone, "Teléfono", style: "display: block", required: true
    = form.number_field :telephone, class: "form-control"
  %div.form-group.field.w-25
    = form.label :address, "Dirección", style: "display: block", required: true
    = form.text_field :address, class: "form-control"
  - if Current.user.present? && Current.user.role == "admin"
    %div.form-group.field.w-25
      = form.label :role, style: "display: block", required: true
      = form.text_field :role, class: "form-control"
  %div
    = form.submit :Registrar, class: 'btn btn-primary'
