= form_with(model: order) do |form|
  - if order.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - order.errors.each do |error|
          %li= error.full_message
  %div.form-group.field.w-25
    = form.label :user_id, "ID de usuario", style: "display: block", required: true
    = form.text_field :user_id, class: "form-control"
  %div.form-group.field.w-25
    = form.label :state, "Estado", style: "display: block", required: true
    = form.text_field :state, class: "form-control"
  %div
    = form.submit :Guardar, class: 'btn btn-primary'
