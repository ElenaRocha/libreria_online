= form_with(model: author) do |form|
  - if author.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(author.errors.count, "error")
        prohibited this author from being saved:
      %ul
        - author.errors.each do |error|
          %li= error.full_message
  %div.form-group.field.w-25
    = form.label :name, "Nombre completo", style: "display: block", required: true
    = form.text_field :name, class: "form-control"
  %div.form-group.field.w-25
    = form.label :birth_date, "Fecha de nacimiento", style: "display: block"
    = form.date_field :birth_date, class: "form-control"
  %div.form-group.field.w-25
    = form.label :nationality, "Nacionalidad", style: "display: block"
    = form.text_field :nationality, class: "form-control"
  %div
    = form.submit :Guardar, class: 'btn btn-primary'
